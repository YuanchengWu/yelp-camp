<% include ../partials/header %>

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <p class="h1 text-center">Add New Comment to <%= campground.name %></p>
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <label for="commentText">Edit Comment</label>
                <textarea class="form-control" name="comment[text]" id="commentText" placeholder="text" rows="5"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="float-left" href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>