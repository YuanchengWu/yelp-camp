<% include ../partials/header %>

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <p class="h1 text-center">Edit Comment</p>
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="commentText">Comment</label>
                <textarea class="form-control" name="comment[text]" id="commentText" rows="5"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="float-left" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>