<% include ../partials/header %>

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <p class="h1 text-center">Edit <%= campground.name %></p>
        <div class="info-form">
            <form class="justify-content-center" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campgroundName">Name</label>
                    <input class="form-control" type="text" id="campgroundName" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="campgroundPrice">Price</label>
                    <input class="form-control" type="number" id="campgroundPrice" name="campground[price]" value="<%= campground.price %>" min="0" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="imageURL">Image URL</label>
                    <input class="form-control" type="text" id="imageURL" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="campgroundDescription">Description</label>
                    <textarea class="form-control" id="campgroundDescription" name="campground[description]" rows="5"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
        <a class="float-left" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>