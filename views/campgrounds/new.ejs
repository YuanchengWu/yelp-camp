<% include ../partials/header %>

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <p class="h1 text-center">Create a New Campground</p>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campgroundName">Name</label>
                <input class="form-control" type="text" name="name" id="campgroundName" placeholder="White Wolf Campground">
            </div>
            <div class="form-group">
                <label for="campgroundPrice">Price</label>
                <input class="form-control" type="number" name="price" id="campgroundPrice" placeholder="9.99" min="0" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <label for="imageURL">Image URL</label>
                <input class="form-control" type="text" name="image" id="imageURL" placeholder="https://linktoimage.com/image.jpg">
            </div>
            <div class="form-group">
                <label for="campgroundDescription">Description</label>
                <textarea class="form-control" name="description" id="campgroundDescription" placeholder="description" rows="5"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="float-left" href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>